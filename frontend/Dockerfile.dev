# Development Dockerfile with hot reload
FROM node:22-alpine

WORKDIR /app

# Copy package files and config
COPY package*.json ./
COPY tsconfig.json ./
COPY tsconfig.node.json ./
COPY vite.config.ts ./
COPY postcss.config.js ./
COPY tailwind.config.js ./
COPY index.html ./
COPY public ./public
COPY src ./src
COPY .env* ./

# Install all dependencies (using --legacy-peer-deps to match Makefile)
RUN npm install --legacy-peer-deps

# Expose port
EXPOSE 3000

# Start Vite development server
CMD ["npm", "run", "dev"]

