# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Application Environment
# Options: development, production, test
NODE_ENV=development

# Server Port
# The port on which the backend server will run
PORT=4000

# MongoDB Connection URI
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Example for local: mongodb://localhost:27017/ultraship
# Example for Atlas: mongodb+srv://username:password@cluster.mongodb.net/ultraship
MONGODB_URI=mongodb://localhost:27017/ultraship

# JWT Secret Key
# Used for signing and verifying JWT tokens
# IMPORTANT: Use a strong, random secret in production
# Generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL
# The URL where the frontend application is hosted
# Used for CORS configuration
# For local development: http://localhost:3000
# For production: https://yourdomain.com
FRONTEND_URL=http://localhost:3000
